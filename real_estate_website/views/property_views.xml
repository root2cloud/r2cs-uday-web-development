<odoo>
    <record id="view_property_list" model="ir.ui.view">
        <field name="name">realestate.property.list</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <list string="Properties">
                <field name="name"/>
                <field name="price"/>
                <field name="city"/>
                <field name="state_id"/>
                <field name="country_id"/>
                <field name="zip"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <record id="view_property_form" model="ir.ui.view">
        <field name="name">realestate.property.form</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="price"/>
                        <field name="street"/>
                        <field name="city"/>
                        <field name="state_id"/>
                        <field name="country_id"/>
                        <field name="zip"/>
                        <field name="bedrooms"/>
                        <field name="bathrooms"/>
                        <field name="area"/>
                        <field name="image" widget="image"/>
                        <field name="status"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem id="menu_realestate_root" name="Real Estate" sequence="10"/>
    <menuitem id="menu_property" name="Properties" parent="menu_realestate_root" sequence="10"/>

    <record id="action_property" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">property</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_property_list"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create your first property</p>
        </field>
    </record>

    <menuitem id="menu_property_action" name="Properties" parent="menu_property" action="action_property"/>
</odoo>
