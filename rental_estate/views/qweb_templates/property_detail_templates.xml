<odoo>
    <template id="property_detail_page" name="Rental Estate Property Detail Page">
        <t t-call="website.layout">
            <link rel="stylesheet" href="/rental_estate/static/src/css/property_details_styles.css"/>
            <main id="wrap" role="main" class="property-detail-page py-5">
                <div class="container">

                    <!-- Tabs -->
                    <ul class="nav nav-tabs mb-4" id="propertyTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <a class="nav-link active" id="overview-tab" data-bs-toggle="tab" href="#overview"
                               role="tab"
                               aria-controls="overview" aria-selected="true">Overview
                            </a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link" id="neighborhood-tab" data-bs-toggle="tab" href="#neighborhood"
                               role="tab"
                               aria-controls="neighborhood" aria-selected="false">Neighborhood
                            </a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link" id="details-tab" data-bs-toggle="tab" href="#details" role="tab"
                               aria-controls="details" aria-selected="false">Property Details
                            </a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link" id="sale-tab" data-bs-toggle="tab" href="#sale" role="tab"
                               aria-controls="sale" aria-selected="false">Sale &amp; Tax History
                            </a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link" id="climate-tab" data-bs-toggle="tab" href="#climate" role="tab"
                               aria-controls="climate" aria-selected="false">Climate
                            </a>
                        </li>
                    </ul>

                    <!-- Tab content -->
                    <div class="tab-content" id="propertyTabContent">

                        <!-- Overview Tab -->
                        <section class="tab-pane fade show active" id="overview" role="tabpanel"
                                 aria-labelledby="overview-tab" tabindex="0">

                            <div class="gallery-box d-flex align-items-start gap-4 mb-4">
                                <div class="main-gallery-img flex-shrink-0 w-50 rounded overflow-hidden shadow-sm">
                                    <img t-attf-src="data:image/png;base64,{{property.image_1920}}"
                                         t-attf-alt="{{property.name}}"
                                         class="main-image rounded img-fluid"/>
                                </div>
                                <div class="room-images-thumbs d-flex flex-wrap gap-3 w-50">
                                    <t t-if="room_images">
                                        <t t-foreach="room_images" t-as="room_image">
                                            <img t-attf-src="data:image/png;base64,{{room_image.image}}"
                                                 t-attf-alt="{{room_image.name}}"
                                                 class="img-thumbnail"
                                                 style="width:240px; height:160px; object-fit:cover;"/>

                                        </t>
                                    </t>
                                </div>
                            </div>

                            <div class="overview-card mx-auto shadow rounded-4 border-0 p-4">
                                <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 1rem;">
                                    <h1 t-esc="property.name" class="mb-0" style="flex-grow: 1;"/>

                                    <div class="property-share-buttons" style="display: flex; gap: 15px;">
                                        <a t-att-href="'https://www.facebook.com/sharer/sharer.php?u=https://localhost:8018//property/' + property.property_type + '/' + str(property.id)"
                                           target="_blank" title="Share on Facebook"
                                           style="color:#3b5998; font-size:24px;">
                                            <i class="fa fa-facebook-square" aria-hidden="true"></i>
                                        </a>
                                        <a t-att-href="'https://twitter.com/intent/tweet?url=http://localhost:8018///property/' + property.property_type + '/' + str(property.id)"
                                           target="_blank" title="Share on Twitter"
                                           style="color:#1da1f2; font-size:24px;">
                                            <i class="fa fa-twitter-square" aria-hidden="true"></i>
                                        </a>
                                        <a t-att-href="'https://www.linkedin.com/shareArticle?mini=true&amp;url=http://localhost:8018/property/' + property.property_type + '/' + str(property.id)"
                                           target="_blank" title="Share on LinkedIn"
                                           style="color:#0077b5; font-size:24px;">
                                            <i class="fa fa-linkedin-square" aria-hidden="true"></i>
                                        </a>
                                        <t t-set="property_url">
                                            localhost:8018/property/#{property.property_type}/#{property.id}
                                        </t>
                                        <a t-att-href="'https://api.whatsapp.com/send?text=Check out this property: ' + property_url"
                                           target="_blank" title="Share on WhatsApp"
                                           style="color:#25d366; font-size:24px;">
                                            <i class="fa fa-whatsapp" aria-hidden="true"></i>
                                        </a>

                                        <a t-att-href="'mailto:?subject=Check out this property&amp;body=https://yourdomain.com/property/' + property.property_type + '/' + str(property.id)"
                                           title="Share via Email" style="color:#333; font-size:24px;">
                                            <i class="fa fa-envelope" aria-hidden="true"></i>
                                        </a>
                                    </div>
                                </div>
                                <p class="fs-5 mb-2 text-secondary">
                                    <strong>Location:</strong>
                                    <t t-esc="property.location or 'N/A'"/>
                                </p>
                                <div class="row text-center mb-2 fs-5">
                                    <div class="col">
                                        <span class="d-block fw-bold">
                                            <t t-esc="property.square_feet or 'N/A'"/>
                                        </span>
                                        <span class="small text-muted">Sq Ft</span>
                                    </div>
                                    <div class="col">
                                        <span class="d-block fw-bold">
                                            <t t-esc="property.rental_price or 'N/A'"/>
                                        </span>
                                        <span class="small text-muted">Price</span>
                                    </div>
                                    <div class="col">
                                        <span class="d-block fw-bold">
                                            <t t-esc="property.availability_status or 'N/A'"/>
                                        </span>
                                        <span class="small text-muted">Status</span>
                                    </div>
                                    <div class="col">
                                        <span class="d-block fw-bold">
                                            <t t-esc="property.lease_duration or 'N/A'"/>
                                        </span>
                                        <span class="small text-muted">Lease</span>
                                    </div>
                                </div>
                                <hr/>
                                <div>
                                    <h5>About This Home:</h5>
                                    <p t-raw="property.description_sale or 'No description available.'"/>
                                </div>
                            </div>

                        </section>

                        <!-- Neighborhood Tab -->
                        <section class="tab-pane fade" id="neighborhood" role="tabpanel"
                                 aria-labelledby="neighborhood-tab"
                                 tabindex="0">
                            <h4>Neighborhood</h4>
                            <p>Neighborhood information will be displayed here.</p>
                        </section>

                        <!-- Property Details Tab -->
                        <section class="tab-pane fade" id="details" role="tabpanel" aria-labelledby="details-tab"
                                 tabindex="0">
                            <h4>Property Details</h4>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">
                                    <strong>Bedrooms:</strong>
                                    <t t-esc="property.bedrooms or 'N/A'"/>
                                </li>
                                <li class="list-group-item">
                                    <strong>Bathrooms:</strong>
                                    <t t-esc="property.bathrooms or 'N/A'"/>
                                </li>
                                <li class="list-group-item">
                                    <strong>Square Feet:</strong>
                                    <t t-esc="property.square_feet or 'N/A'"/>
                                </li>
                                <li class="list-group-item">
                                    <strong>Deposit Amount:</strong>
                                    <t t-esc="property.deposit_amount or 'N/A'"/>
                                </li>
                                <li class="list-group-item">
                                    <strong>Status:</strong>
                                    <t t-esc="property.status or 'N/A'"/>
                                </li>
                            </ul>
                        </section>

                        <!-- Sale & Tax History Tab -->
                        <section class="tab-pane fade" id="sale" role="tabpanel" aria-labelledby="sale-tab"
                                 tabindex="0">
                            <h4>Sale &amp; Tax History</h4>
                            <p>Sale and tax history details will be displayed here.</p>
                        </section>

                        <!-- Climate Tab -->
                        <section class="tab-pane fade" id="climate" role="tabpanel" aria-labelledby="climate-tab"
                                 tabindex="0">
                            <h4>Climate Risks</h4>
                            <ul>
                                <li>Flood Factor: Information here.</li>
                                <li>Fire Factor: Information here.</li>
                                <li>Heat Factor: Information here.</li>
                                <li>Wind Factor: Information here.</li>
                                <li>Air Factor: Information here.</li>
                            </ul>
                        </section>

                    </div>

                    <a t-att-href="'/properties'" class="btn btn-secondary mt-4">Back to Listings</a>

                </div>
            </main>
        </t>
    </template>
</odoo>
