<odoo>
    <template id="sell_property_form" name="Sell Property Form">
        <t t-call="website.layout">
            <main role="main" class="container py-5">
                <h1>Sell Your Property</h1>
                <t t-if="error">
                    <div class="alert alert-danger" role="alert" t-out="error"/>
                </t>
                <form t-att-action="'/property/sell/submit'" method="post" enctype="multipart/form-data"
                      class="mt-4 needs-validation" novalidate="novalidate">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                    <div class="mb-3">
                        <label for="name" class="form-label">Property Name *</label>
                        <input type="text" class="form-control" id="name" name="name" t-att-value="name or ''"
                               required="required"/>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label">Location *</label>
                        <input type="text" class="form-control" id="location" name="location"
                               t-att-value="location or ''" required="required"/>
                    </div>

                    <div class="mb-3">
                        <label for="zip_code" class="form-label">ZIP Code *</label>
                        <input type="text" class="form-control" id="zip_code" name="zip_code"
                               t-att-value="zip_code or ''" required="required"/>
                    </div>

                    <div class="mb-3">
                        <label for="bedrooms" class="form-label">Bedrooms</label>
                        <input type="number" class="form-control" id="bedrooms" name="bedrooms"
                               t-att-value="bedrooms or ''"/>
                    </div>

                    <div class="mb-3">
                        <label for="bathrooms" class="form-label">Bathrooms</label>
                        <input type="number" class="form-control" id="bathrooms" name="bathrooms"
                               t-att-value="bathrooms or ''"/>
                    </div>

                    <div class="mb-3">
                        <label for="square_feet" class="form-label">Square Feet</label>
                        <input type="number" step="0.01" class="form-control" id="square_feet" name="square_feet"
                               t-att-value="square_feet or ''"/>
                    </div>

                    <div class="mb-3">
                        <label for="rental_price" class="form-label">Price</label>
                        <input type="number" step="0.01" class="form-control" id="rental_price" name="rental_price"
                               t-att-value="rental_price or ''"/>
                    </div>

                    <div class="mb-3">
                        <label for="main_image" class="form-label">Main House Image *</label>
                        <input type="file" class="form-control" id="main_image" name="image_1920" accept="image/*"
                               required="required"/>
                    </div>


                    <div class="mb-3">
                        <label for="room_images" class="form-label">Room Images</label>
                        <input type="file" class="form-control" id="room_images" name="room_images" accept="image/*"
                               multiple="multiple"/>
                    </div>

                    <button type="submit" class="btn btn-success">Submit Property</button>
                </form>
            </main>
        </t>
    </template>
</odoo>
